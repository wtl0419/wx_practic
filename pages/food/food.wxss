/* pages/food/food.wxss */
page{
	background: #f5f5f5;
}
.header{
	background: #fff;
	padding: 20rpx;
	display: flex;
}
.address{
	width: 100rpx;
	text-align: center;
	padding-top: 10rpx;
	padding-bottom: 10rpx;
	padding-right: 20rpx;
	font-size: 30rpx;
}

.search{
	flex: 1;
	background: #eee;
	padding-left: 10rpx;
	border-radius: 10rpx;
	color: #666;
	font-size: 28rpx;
	padding-top: 10rpx;
	padding-bottom: 10rpx;
}
.type{
	display: flex;
	flex-wrap: wrap;
	background: #fff;
	padding-top: 20rpx;
}
.type .item{
	width: 25%;
	text-align: center;
	color:#666;
	font-size: 28rpx;
	margin-bottom: 20rpx;
}
.type image{
	width: 74rpx;
	height: 74rpx;
}